{
    "name": "nusmodifications/nuswhispers",
    "description": "NUSWhispers source. Powered by Laravel + Angular",
    "keywords": ["nuswhispers", "nusmods", "nusmodifications", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "facebook/php-sdk-v4": "~5.1",
        "laravel/framework": "5.3.*",
        "laravel/socialite": "~2.0",
        "laravelcollective/html": "5.3.*",
        "sammyk/laravel-facebook-sdk": "~3.0",
        "predis/predis": "^1.0",
        "anlutro/l4-settings": "^0.4.9"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.0",
        "symfony/dom-crawler": "3.1.*",
        "symfony/css-selector": "3.1.*",
        "fzaninotto/faker": "^1.6",
        "mockery/mockery": "^0.9.6",
        "satooshi/php-coveralls": "^1.0"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "NUSWhispers\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NUSWhispers\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": ["php -r \"file_exists('.env') || copy('.env.example', '.env');\""],
        "post-create-project-cmd": ["php artisan key:generate"],
        "post-install-cmd": ["Illuminate\\Foundation\\ComposerScripts::postInstall", "php artisan optimize"],
        "post-update-cmd": ["Illuminate\\Foundation\\ComposerScripts::postUpdate", "php artisan optimize"]
    },
    "config": {
        "preferred-install": "dist"
    }
}
