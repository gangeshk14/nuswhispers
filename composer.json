{
    "name": "nusmodifications/nuswhispers",
    "description": "NUSWhispers source. Powered by Laravel + Angular",
    "keywords": ["nuswhispers", "nusmods", "nusmodifications", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "anlutro/l4-settings": "^0.4.9",
        "facebook/graph-sdk": "~5.1",
        "google/recaptcha": "^1.1",
        "laravel/framework": "~5.5.0",
        "laravel/socialite": "~3.0",
        "laravelcollective/html": "~5.5.0",
        "predis/predis": "^1.0",
        "roave/security-advisories": "dev-master",
        "sammyk/laravel-facebook-sdk": "~3.0"
    },
    "require-dev": {
        "filp/whoops": "~2.0",
        "phpunit/phpunit": "~6.0",
        "fzaninotto/faker": "^1.6",
        "mockery/mockery": "^0.9.6",
        "satooshi/php-coveralls": "^1.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "NUSWhispers\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NUSWhispers\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
